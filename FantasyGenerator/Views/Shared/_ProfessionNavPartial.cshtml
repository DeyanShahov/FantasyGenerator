@using FantasyGenerator.Core.Constants;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> UserManager

@if (User.IsInRole(UserConstants.Roles.User))
{
    <nav id="secondNavBar2" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Profession" asp-action="ShowAllProfession">All Professions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="user" asp-controller="Profession" asp-action="ShowMyProfession" asp-route-userId="@UserManager.GetUserId(User)">My Profession</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Profession" asp-action="CreateNewProfession">Create Profession</a>
