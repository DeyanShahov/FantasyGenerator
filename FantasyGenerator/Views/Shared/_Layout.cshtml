@using FantasyGenerator.Core.Constants;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FantasyGenerator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FantasyGenerator.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/dist/toastr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/dist/toastr.min.js"></script>

    @*   <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css" />*@


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", false)
</head>
<body>
    <header>
        <nav id="firstNavBar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FantasyGenerator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <partial name="_LeyoutNavPartial" />
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <div id="secondNavBar1" style="display: block;">
            <partial name="_RaceNavPartial" />
        </div>
        <div id="secondNavBar2" style="display: none;">
            <partial name="_ProfessionNavPartial" />
        </div>
        <div id="secondNavBar3" style="display: none;">
            <partial name="_NpcNavPartial" />
        </div>
       @* <a onclick="toggleSecondNavBar('secondNavBar1')">Покажи/Скрий NavBar 1</a>
        <a href="javascript:void(0);" onclick="toggleSecondNavBar('secondNavBar2')">Покажи/Скрий NavBar 2</a>*@

        <!-- И така нататък за другите "secondNavBar" елементи -->
       
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_AlertPartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FantasyGenerator - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @if (TempData.ContainsKey("SuccessMessage"))
    {
        <script>
            toastr.success("@TempData["SuccessMessage"]");
        </script>
    }

    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <script>
            toastr.error("@TempData["ErrorMessage"]");
        </script>
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <partial name="_UserMessages" />
    <partial name="_AlertPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
