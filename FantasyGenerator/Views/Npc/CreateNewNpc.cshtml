@using FantasyGenerator.Core.Models.Npc;
@model NpcCreateViewModel

@{
    ViewData["Title"] = "Create new Npc";
}

<link rel="stylesheet" href="/text.css" type="text/css" />
<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <section>
            <form class="mx-auto half-width col-5" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<input type="hidden" name="AuthorId" value="@user.Id" />*@
                <div class="top-border-line primary-separator"></div>
                <div class="form-floating mb-3">
                    <input asp-for="FirstName" class="form-control" autocomplete="firstName" aria-required="true" placeholder="" />
                    <label asp-for="FirstName" class="form-label"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LastName" class="form-control" autocomplete="lastName" aria-required="true" placeholder="" />
                    <label asp-for="LastName" class="form-label"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="NickNamePrefix" class="form-control" autocomplete="nickNamePrefix" aria-required="true" placeholder="" />
                    <label asp-for="NickNamePrefix" class="form-label"></label>
                    <span asp-validation-for="NickNamePrefix" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="NickNameSuffix" class="form-control" autocomplete="nickNameSuffix" aria-required="true" placeholder="" />
                    <label asp-for="NickNameSuffix" class="form-label"></label>
                    <span asp-validation-for="NickNameSuffix" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="IsMale" value="true" checked>
                    <label class="form-check-label">
                        Мъжки
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="IsMale" value="false">
                    <label class="form-check-label">
                        Женски
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="RaceId" class="form-control" autocomplete="raceId" aria-required="true" placeholder="" />
                    <label asp-for="RaceId" class="form-label"></label>
                    <span asp-validation-for="RaceId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ProfessionId" class="form-control" autocomplete="professionId" aria-required="true" placeholder="" />
                    <label asp-for="ProfessionId" class="form-label"></label>
                    <span asp-validation-for="ProfessionId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" autocomplete="description" aria-required="true" placeholder="" />
                    <label asp-for="Description" class="form-label"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="top-border-line primary-separator"></div>
                <div class="button-holder d-flex justify-content-center">
                    <button type="submit" class="btn SMS-bg-color">Create</button>
                </div>
            </form>
        </section>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

