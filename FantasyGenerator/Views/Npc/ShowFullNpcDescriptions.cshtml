@using FantasyGenerator.Core.Models.Npc;
@model NpcFullViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">About Npc: @Model.FirstName @Model.LastName </h3>
    </div>

    <div class="card-body">
        <strong><i class="fas fa-map-marker-alt mr-1"></i> Nickname </strong>
        <p class="text-muted">@($"{Model.NickNamePrefix} {Model.NickNameSuffix}")</p>
        <hr>
        <strong><i class="fas fa-book mr-1"></i> Gender</strong>
        <p class="text-muted"> @Model.IsMale </p>
        <hr>
        <strong><i class="fas fa-book mr-1"></i> Race</strong>
        <p class="text-muted"> @Model.Race </p>
        <hr>
        <strong><i class="fas fa-book mr-1"></i> Profession</strong>
        <p class="text-muted"> @Model.Profession </p>
        <hr>
        <strong><i class="fas fa-book mr-1"></i> Description</strong>
        <p class="text-muted"> @Model.Description </p>
        <hr>
        <strong><i class="far fa-file-alt mr-1"></i> Author</strong>
        <p class="text-muted">@Model.Author</p>
    </div>

</div>