@using FantasyGenerator.Core.Models.Profession;
@model ProfessionFullViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">About Profession: @Model.Name</h3>
    </div>

    <div class="card-body">
        <strong><i class="fas fa-book mr-1"></i> Description</strong>
        <p class="text-muted"> @Model.Description </p>
        <hr>
        <strong><i class="fas fa-map-marker-alt mr-1"></i> Category </strong>
        <p class="text-muted">@Model.Category</p>
        <hr>
        <strong><i class="far fa-file-alt mr-1"></i> Author</strong>
        <p class="text-muted">@Model.Author</p>
    </div>

</div>