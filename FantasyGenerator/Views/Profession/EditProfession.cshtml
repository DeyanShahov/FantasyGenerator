@using FantasyGenerator.Core.Models.Profession;
@model ProfessionEditViewModel

@{
    ViewData["Title"] = "Edit yours Profession";
}

<link rel="stylesheet" href="/text.css" type="text/css" />
<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <section>
            <form class="mx-auto half-width col-5" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="AuthorId" value="@Model.AuthorId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="top-border-line primary-separator"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" autocomplete="name" aria-required="true" placeholder="" value="@Model.Name" />
                    <label asp-for="Name" class="form-label"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" autocomplete="description" aria-required="true" placeholder="" value="@Model.Description" />
                    <label asp-for="Description" class="form-label"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Category" class="form-control" autocomplete="category" aria-required="true" placeholder="" value="@Model.Category" />
                    <label asp-for="Category" class="form-label"></label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="top-border-line primary-separator"></div>
                <div class="button-holder d-flex justify-content-center">
                    <button type="submit" class="btn SMS-bg-color">Edit</button>
                </div>
            </form>
        </section>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}