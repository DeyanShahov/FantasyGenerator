@using FantasyGenerator.Core.Models;
@model UserRolesViewModel;

@{
    ViewData["Title"] = "User Roles";
    var itemList = (IEnumerable<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-6">       
        <form id="roles" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <input type="hidden" name="Email" value="@Model.Email" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h3>User: @Html.DisplayFor(m => m.Email)</h3>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>User Roles</label>
                    <select asp-for="RoleIds" asp-items="@itemList" multiple="" class="form-control">
                        @*<option value="@item.Value" selected="@(item.Selected ? "selected" : "")">@item.Text</option>*@
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-8"></div>
                <div class="col-4 text-right mt-2">
                <!-- /.col -->
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>
