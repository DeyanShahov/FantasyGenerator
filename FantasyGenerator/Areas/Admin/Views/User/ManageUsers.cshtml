@using FantasyGenerator.Core.Models;
@model IEnumerable<UserListViewModel>
@{
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Application Users</h3>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>
                                    <a asp-area="admin" asp-controller="user" asp-action="edit" asp-route-id="@user.Id" class="btn btn-block btn-outline-primary">Edit</a>
                                    <a asp-area="admin" asp-controller="user" asp-action="roles" asp-route-id="@user.Id" class="btn btn-block btn-outline-warning btn-flat">Roles</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>